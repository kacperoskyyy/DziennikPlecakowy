<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DziennikPlecakowy.Views.RegisterPage"
             Title="Rejestracja">
    <StackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Nazwa użytkownika" Text="{Binding Username}" />
        <Entry Placeholder="Hasło" Text="{Binding Password}" IsPassword="True"/>
        <Button Text="Zarejestruj" Command="{Binding RegisterCommand}"/>
    </StackLayout>
</ContentPage>
