<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DziennikPlecakowy.Views.TripsListPage"
             Title="Wycieczki">
    <StackLayout Padding="10">
        <Button Text="Odśwież" Command="{Binding LoadCommand}"/>
        <CollectionView ItemsSource="{Binding Trips}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding TripDate}" FontAttributes="Bold"/>
                            <Label Text="{Binding Distance, StringFormat='Odległość: {0} km'}"/>
                            <Label Text="{Binding Duration, StringFormat='Czas: {0} s'}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
